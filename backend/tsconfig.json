{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ESNext"],
		"paths": {
			"@shared/*": ["../shared/src/*"],
			"@types/*": ["../type-patches/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["src", "../shared/src", "../type-patches"]
}
